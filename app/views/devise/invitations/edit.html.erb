<div class="row">
  <h2 class="col-12 text-center m-5"><%= t "devise.invitations.edit.header" %></h2>
</div>

<div class="row">
  <section class="col-8 offset-2 col-sm-6 offset-sm-3">
    <%= form_for(resource, as: resource_name, url: invitation_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :invitation_token, readonly: true %>

      <% if f.object.class.require_password_on_accepting %>
        <div class="field">
          <%= f.label :password %><br />
          <%= f.password_field :password, class: 'form-control m-2' %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, class: 'form-control m-2' %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit t("devise.invitations.edit.submit_button"), class: 'btn btn-primary m-2' %>
      </div>
    <% end %>
  </section>
</div>
