<div class="row">
  <h2 class="col-12 text-center m-5"><%= t "devise.invitations.new.header" %></h2>
</div>

<div class="row">
  <section class="col-8 offset-2 col-sm-6 offset-sm-3">
    <%= form_for(resource, as: resource_name, url: invitation_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "shared/error_messages", resource: resource %>

      <% resource.class.invite_key_fields.each do |field| -%>
        <div class="field">
          <%= f.label field %><br />
          <%= f.text_field field, class: 'form-control m-2' %>
        </div>
      <% end -%>

      <div class="actions">
        <%= f.submit t("devise.invitations.new.submit_button"), class: 'btn btn-primary m-2' %>
      </div>
    <% end %>
  </section>
</div>
